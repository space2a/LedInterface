<Window x:Class="LedInterface.SearchESP32"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LedInterface"
        mc:Ignorable="d"
        Title="Recherche du panneau" Height="210" Width="372" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <ProgressBar Margin="-3,60,-3,60" IsIndeterminate="True" BorderBrush="{x:Null}" Background="#FF5A2CDE" Foreground="#FF703EFF"></ProgressBar>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="22">Recherche de votre appareil...</Label>
    </Grid>
</Window>
