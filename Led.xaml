<UserControl x:Class="LedInterface.Led"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LedInterface"
             mc:Ignorable="d" 
             Height="60" Width="60">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" MouseEnter="Grid_MouseEnter" MouseRightButtonDown="Grid_MouseRightButtonDown">
        <Rectangle x:Name="Background" Fill="Black"></Rectangle>
        <Viewbox Margin="9,9,9,9">
            <Label x:Name="Debug" FontSize="12" Background="{x:Null}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFE0AAFF">0 ; 0</Label>
        </Viewbox>
    </Grid>
</UserControl>
